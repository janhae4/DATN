WORKDIR /app
ENV NODE_ENV=production
COPY package*.json ./
RUN npm ci --only=production && npm cache clean --force
RUN npm install --no-save @css-inline/css-inline-linux-x64-musl
COPY --from=builder /app/dist ./dist
