generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_PROJECT_URL")
}

model Project {
  id          String    @id @default(uuid())
  name        String
  description String?
  ownerId     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  tasks       Task[]
  sprints     Sprint[]
  epics       Epic[]
  statuses    Status[]
  labels      Label[]
  
  members     ProjectMember[]
}

model ProjectMember {
  id        String      @id @default(uuid())
  role      ProjectRole @default(MEMBER)
  joinedAt  DateTime    @default(now())
  
  projectId String
  userId    String      // Chỉ là ID, không có quan hệ

  // Quan hệ nội bộ với Project
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
}

enum ProjectRole {
  OWNER
  ADMIN
  MEMBER
}
// === KẾT THÚC PHẦN THÊM MỚI ===


model Task {
  id          String    @id @default(uuid())
  title       String
  description String?
  priority    Priority?
  due_date    DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  statusId    String?
  projectId   String
  epicId      String?
  sprintId    String?

  assigneeIds String[] 

  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  status      Status?   @relation(fields: [statusId], references: [id], onUpdate: SetNull, onDelete: SetNull)
  epic        Epic?     @relation(fields: [epicId], references: [id], onDelete: SetNull)
  sprint      Sprint?   @relation(fields: [sprintId], references: [id], onDelete: SetNull)
  
  labels      Label[]   @relation("TaskLabels")
}

enum Priority {
  low
  medium
  high
}

model Status {
  id        String     @id @default(uuid())
  name      String
  color     String
  order     Int
  status    StatusEnum
  projectId String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks     Task[]

  @@unique([projectId, name])
}

enum StatusEnum {
  todo
  in_progress
  done
}

model Label {
  id        String   @id @default(uuid())
  name      String
  color     String
  projectId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks     Task[]   @relation("TaskLabels")
  
  @@unique([projectId, name])
}

model Sprint {
  id         String       @id @default(uuid())
  title      String
  goal       String?
  start_date DateTime
  end_date   DateTime
  projectId  String
  status     SprintStatus @default(planned)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  project    Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks      Task[]
  epics      Epic[]
}

enum SprintStatus {
  planned
  active
  completed
  archived
}

model Epic {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      EpicStatus @default(todo)
  priority    Priority?
  projectId   String
  sprintId    String?
  start_date  DateTime?
  due_date    DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  memberIds   String[]

  project     Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  sprint      Sprint?    @relation(fields: [sprintId], references: [id], onDelete: SetNull)
  tasks       Task[]
}

enum EpicStatus {
  todo
  in_progress
  done
  canceled
}